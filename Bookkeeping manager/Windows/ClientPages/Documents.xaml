<Page x:Class="Bookkeeping_manager.Windows.ClientPages.Documents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bookkeeping_manager.Windows.ClientPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="Documents">

    <Grid x:Name="DocumentsGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Documents" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
            <Button Content="Add Document" Grid.Column="1" HorizontalAlignment="Right" Margin="10,0,10,10" Style="{StaticResource ActionButton}" Click="Button_Click"/>
            <Separator Style="{StaticResource HorizontalDividingLine}" Grid.ColumnSpan="2" Grid.Row="1"/>
        </Grid>
        
    </Grid>
</Page>
